<%- include('./partials/header') %>
    <div class="w-full h-[90vh] flex items-start px-20 py-20 gap-10">
        <div class="w-[30%] rounded-md overflow-hidden h-[70vh] overflow-y-auto p-5">
            <% user.cart.forEach((item)=> { %>
                <div class="w-full rounded-md overflow-hidden mb-10">
                    <div class="w-full h-80" style="background-color: <%= item.panelcolor || '#f0f0f0' %>;">
                        <% if (item.image) { %>
                            <img class="h-[20rem] mx-auto"
                                src="data:image/jpeg;base64,<%= item.image.toString('base64') %>"
                                alt="<%= item.name %>">
                            <% } else { %>
                                <div class="h-[12rem] flex items-center justify-center text-gray-500">No Image Available
                                </div>
                                <% } %>
                    </div>
                    <div class="w-full flex justify-between px-5 py-4">
                        <h3 class="text-2xl">
                            <%= item.name %>
                        </h3>
                        <div class="flex items-center gap-2">
                            <i class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-add-line"></i>
                            <div class="px-2 py-1 rounded-md bg-white text-black">01</div>
                            <i
                                class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-subtract-line"></i>
                        </div>
                    </div>
                    <div class="flex items-center justify-between px-5 py-3">
                        <h4 class="text-lg">Net Total</h4>
                        <h2 class="text-lg">₹ <%= item.price %>
                        </h2>
                    </div>
                </div>
                <% }) %>
        </div>

        <!-- Price Breakdown Section -->
        <div class="w-[70%]">
            <h3 class="text-xl">Price Breakdown</h3>
            <div class="px-10 mt-5">
                <div class="flex mt-2">
                    <h4 class="w-1/3">Total MRP</h4>
                    <h4>
                        <%= totalPrice %>
                    </h4>
                </div>
                <div class="flex mt-2">
                    <h4 class="w-1/3">Discount on MRP</h4>
                    <h4>
                        <%= totalDiscount %>
                    </h4>
                </div>
                <div class="flex mt-2">
                    <h4 class="w-1/3">Platform Fee</h4>
                    <h4>₹ 20</h4>
                </div>
                <div class="flex mt-2">
                    <h4 class="w-1/3">Shipping Fee</h4>
                    <h4>FREE</h4>
                </div>
            </div>
            <div class="w-full h-[1px] bg-black mt-10"></div>
            <div class="flex mt-5">
                <h3 class="w-1/3 text-xl">Total Amount</h3>
                <h3 class="font-semibold text-xl text-green-600">
                    <%= netTotal %>
                </h3>
            </div>
            <form action=""></form>
        </div>
    </div>
    <%- include('./partials/footer') %>